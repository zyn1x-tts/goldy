-- Fonction pour donner un goldy spécifique
local function giveGoldy(goldyName)
    local player = game.Players.LocalPlayer
    print("Giving " .. goldyName .. " to " .. player.Name)
    -- Code pour donner l'objet en fonction du jeu (ex : MM2)
    -- game.ReplicatedStorage.GiveGoldy:FireServer(goldyName)  -- À adapter selon le système du jeu
end

-- Créer un bouton pour chaque goldy
for _, item in ipairs(goldyItems) do
    Tab:CreateButton({
        Name = "Give " .. item,
        Info = "Give " .. item .. " to your character.",
        Callback = function()
            giveGoldy(item)  -- Appel de la fonction pour donner l'item
        end
    })
end

