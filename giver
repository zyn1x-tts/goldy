local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/UI-Interface/CustomFIeld/main/RayField.lua'))()
local Window = Rayfield:CreateWindow({
   Name = "Goldy Selector",
   LoadingTitle = "Goldy Items",
   LoadingSubtitle = "by YourName",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Crée un dossier personnalisé pour ton jeu
      FileName = "GoldySelector"
   },
   Discord = {
      Enabled = false,
      Invite = "sirius", -- Code d'invitation Discord, ne pas inclure discord.gg/
      RememberJoins = true
   },
   KeySystem = false, -- Activer le système de clé
   KeySettings = {
      Title = "Goldy Selector",
      Subtitle = "Key System",
      Note = "Join the discord (discord.gg/sirius)",
      FileName = "SiriusKey",
      SaveKey = false,
      GrabKeyFromSite = false,
      Key = "Hello"
   }
})

